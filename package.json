{
  "name": "actions-comment-pull-request",
  "version": "3.0.1",
  "description": "GitHub action for commenting pull-request",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:cleanup",
    "build:main": "ncc build src/main.ts -o dist",
    "build:cleanup": "ncc build src/cleanup.ts -o dist/cleanup",
    "lint": "prettier --write **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/step-security/actions-comment-pull-request"
  },
  "keywords": [
    "actions",
    "container",
    "pull-request",
    "comment",
    "message"
  ],
  "author": "step-security",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/step-security/actions-comment-pull-request/issues"
  },
  "homepage": "https://github.com/step-security/actions-comment-pull-request#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^24.6.2",
    "@vercel/ncc": "^0.38.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
